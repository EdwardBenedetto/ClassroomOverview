<%- include('partials/header') -%>
<section id="signUpBox">
 
  <% if (locals.messages.errors) { %>
      <% messages.errors.forEach( el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %>
  <% } %>

  <div class="container card text-center shadow " style="margin: 7rem auto; min-width: 300px; max-width: 450px; height: auto">
  <form action="/signup" method="POST" class="btn-group flex-column">

    <div class="form-floating">
      <input type="text" name="userName" placeholder="User Name" class="form-control btn-lg my-2">
      <label for="userName">Unique username</label>
    </div>
   
    <div class="form-floating">
      <input type="email" name="email" placeholder="Parent's Email" class="form-control btn-lg my-2">
      <label for="email">Email Address</label>
    </div>
    <div class="form-floating">
      <input type="password" name="password" placeholder="Parent's Password" class="form-control btn-lg my-2">
      <label for="password">Password</label>
    </div>
    <div class="form-floating">
      <input type="password" name="confirmPassword" placeholder="Confirm Parent's Password" class="form-control btn-lg my-2">
      <label for="confirmPassword">Confirm Password</label>
    </div>
    

    <div class="">
      <button type="submit" class="btn btn-dark btn-lg">Create Account</button>
    </div>

       <p class="my-0">Already have an account? <a href="/login">LOG IN</a></p>
  </form>
  </div>
</section>

<%- include('partials/footer') -%>



       